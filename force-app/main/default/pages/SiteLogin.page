<apex:page id="loginPage" showHeader="false" title="{!$Label.site.site_login}">
  <apex:composition template="{!$Site.Template}">
    <apex:define name="body">  
        <apex:panelGrid columns="1"> 
           <apex:panelGrid cellpadding="0" cellspacing="0" columns="1" styleClass="topPanelContainer"> 
            <apex:outputPanel layout="block" styleClass="topPanel">
              <apex:panelGrid cellpadding="0" cellspacing="0"  columns="2"> 
                <apex:panelGroup >
                  <apex:outputText styleClass="title"  style="display:block; width:450px; color: #4F5050; font-family: 'Lato',Helvetica,Arial,sans-serif;" value=" Returning user? Log in here. "/>
                  <br/>
                  <c:SiteLogin id="siteLogin"/>
                  <br/>
                </apex:panelGroup>
              </apex:panelGrid> 
             </apex:outputPanel>
          </apex:panelGrid> 
       </apex:panelGrid>
      <br/>
    </apex:define>
  </apex:composition>
</apex:page>